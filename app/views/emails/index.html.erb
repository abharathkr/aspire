<div class="container-fluid">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="well well-md a">
        <fieldset>
          <legend class="text-center">Emails</legend>
        </fieldset>
        <table>
          <thead>
            <tr>
              <th colspan="5">Email</th>
              <th colspan="4">Name</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @emails.each do |email| %>
              <tr>
                <td colspan="5"><%= email.email %></td>
                <td colspan="4"><%= email.user_name %></td>
                <td colspan="3"><%= link_to 'Show', email %>
                <%= link_to 'Edit', edit_email_path(email) %>
                <%= link_to 'Destroy', email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Email', new_email_path,class: "btn btn-raised btn-info"  %>
      </div>
    </div>
  </div>
</div>